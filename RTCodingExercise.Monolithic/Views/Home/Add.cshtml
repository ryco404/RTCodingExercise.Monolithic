@model PlateViewModel
@{
    ViewData["Title"] = "Home Page";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <form method="post">
            <div class="form-group row mb-2">
                <label asp-for="Plate" class="col-sm-4 col-form-label">Email</label>
                <div class="col-sm-8">
                    <input asp-for="Plate" class="form-control" placeholder="e.g. RY4N11">
                    <span class="text-danger field-validation-valid"
                          data-valmsg-for="Plate" data-valmsg-replace="true"></span>
                </div>
            </div>
            <div class="form-group row mb-2">
                <label asp-for="PurchasePrice" class="col-sm-4 col-form-label">Purchase Price</label>
                <div class="col-sm-8">
                    <div class="d-flex align-items-center">
                        <span class="me-2">£</span>
                        <input asp-for="PurchasePrice" type="number" step="0.01" class="form-control" value="0" placeholder="123.45">
                    </div>
                    <span class="text-danger field-validation-valid"
                          data-valmsg-for="PurchasePrice" data-valmsg-replace="true"></span>
                </div>
            </div>
            <div class="form-group row mb-2">
                <label asp-for="SalePrice" class="col-sm-4 col-form-label">Sale Price</label>
                <div class="col-sm-8">
                    <div class="d-flex align-items-center">
                        <span class="me-2">£</span>
                        <input asp-for="SalePrice" type="number" step="0.01" class="form-control" value="0" placeholder="123.45">
                    </div>
                    <span class="text-danger field-validation-valid"
                          data-valmsg-for="SalePrice" data-valmsg-replace="true"></span>
                </div>
            </div>
            <div class="row mt-4">
                <div class="col-sm-12 text-center">
                    <button class="btn btn-primary" type="submit">Save</button>
                </div>
            </div>
        </form>
    </div>
</div>
